<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PinBoardAssignment" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PinBoardAssignment.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PinBoardAssignment.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PinBoardAssignment.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShapeableImageview.Style" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeableImageview.RoundedCorners" parent="ShapeableImageview.Style">
        <item name="cornerSize">1%</item>
    </style>
    <style name="ShapeableImageview.Circle" parent="ShapeableImageview.Style">
        <item name="cornerSize">50%</item>
    </style>
</resources>